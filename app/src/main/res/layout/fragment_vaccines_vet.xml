<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetsScreens.PetsMenuFragmnt"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/lpurple"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Vacunas de mis Mascotas "
        android:textSize="30dp"
        android:background="@color/dpurple"
        android:gravity="center"
        android:textColor="@color/white"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:gravity="end"
        >
        <Button
            android:id="@+id/btn_register_vac_pet"
            android:layout_width="150dp"
            android:layout_height="62dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Agregar"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:weightSum="10"
        android:gravity="end"
        >


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerVaccines"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent" />


    </LinearLayout>

</LinearLayout>