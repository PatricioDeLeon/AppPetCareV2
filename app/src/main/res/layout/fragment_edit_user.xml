<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileScreens.EditUserFragment"
    android:orientation="vertical"
    android:weightSum="20"
    android:background="@color/lpink"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Editar Perfil"
        android:gravity="center"
        android:textSize="40dp"
        android:fontFamily="@font/barlow"
        android:textColor="@color/white"
        android:background="@color/dpink"
        />

    <EditText
        android:hint="Nombre"
        android:layout_marginTop="30dp"
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"

        />

    <EditText
        android:hint="Email"
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="30dp"

        />

    <EditText
        android:hint="TelÃ©fono"
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/update_user"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/ddpink"
        android:layout_weight="2"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        android:text="Actualizar ahora "
        android:textSize="15dp"
        />

    <Button
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/ddpink"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:text="Regresar"
        android:textSize="15dp"
        />



</LinearLayout>