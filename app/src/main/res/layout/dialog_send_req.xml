<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:weightSum="10"

    >

        <TextView
            android:text="El motivo de su peticion?"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <EditText
            android:hint="mensaje"
            android:layout_margin="5dp"
            android:id="@+id/mesage_request"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />
        <EditText
            android:layout_margin="5dp"
            android:hint="nombre de mascota"
            android:id="@+id/name_pet_to_send"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />
        <TextView
            android:text="Enviar peticion"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_weight="1" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="10"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnCancelRequest"
                android:text="Cancel"
                android:layout_margin="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />
            <Button
                android:id="@+id/btnAcceptRequest"
                android:text="accept"
                android:layout_margin="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5" />



        </LinearLayout>
            


    

</LinearLayout>