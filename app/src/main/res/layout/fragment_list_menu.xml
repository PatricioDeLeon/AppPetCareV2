<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListMenu"
    android:orientation="vertical"
    android:weightSum="20"
    android:background="@color/lblue"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="10"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/email_user"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="EMAIL"
            android:gravity="center"
            />
        <ImageButton
            android:id="@+id/goToApi"
            android:src="@drawable/ic_request"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <androidx.cardview.widget.CardView
            android:id="@+id/container_profile"
            android:layout_width="115dp"
            android:layout_height="107dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/cardview_dark_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:gravity="center"
                android:text="Profile"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="235dp"
                tools:layout_editor_absoluteY="85dp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/container_req"
            android:layout_width="115dp"
            android:layout_height="107dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/cardview_dark_background">


            <TextView
                android:id="@+id/requests_id"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:gravity="center"
                android:text="Requests"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="235dp"
                tools:layout_editor_absoluteY="85dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">


        <androidx.cardview.widget.CardView
            android:id="@+id/container_pets"
            android:layout_width="115dp"
            android:layout_height="107dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/cardview_dark_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:gravity="center"
                android:text="My pets"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="235dp"
                tools:layout_editor_absoluteY="85dp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/container_chats"
            android:layout_width="115dp"
            android:layout_height="107dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/cardview_dark_background">

            <TextView
                android:layout_width="113dp"
                android:layout_height="109dp"
                android:gravity="center"
                android:text="Chats"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="235dp"
                tools:layout_editor_absoluteY="85dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <androidx.cardview.widget.CardView
            android:id="@+id/container_llamada"
            android:layout_width="115dp"
            android:layout_height="107dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/cardview_dark_background">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Llamada"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="235dp"
                tools:layout_editor_absoluteY="85dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>




</LinearLayout>