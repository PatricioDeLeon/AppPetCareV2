<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity"
    android:weightSum="10"
    android:background="@color/lorange"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="REGISTRATE COMO VET"
            android:textColor="@color/white"
            android:background="@color/dorange"
            android:textSize="30dp"
            />

        <ImageButton
            android:id="@+id/go_to_make_request"
            android:backgroundTint="@color/dorange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/ic_request"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:padding="10dp"
        android:weightSum="10"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/name_register"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre"
            android:background="@color/white"
            />

        <EditText
            android:id="@+id/email_register"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:background="@color/white"
            />


        <EditText
            android:id="@+id/password_register"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Contraseña"
            android:background="@color/white"
            />

        <EditText
            android:id="@+id/cedula_register"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Cédula"
            android:background="@color/white"
            />


        <EditText
            android:id="@+id/phone_register"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Teléfono"
            android:background="@color/white"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="10"
            android:gravity="center"
            >



            <EditText
                android:id="@+id/code_vet"
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:inputType="number"
                android:hint="Código"
                android:background="@color/white"
                />


        </LinearLayout>









    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_register_vet"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/ddorange"
            android:text="Registrarse" />

    </LinearLayout>



</LinearLayout>