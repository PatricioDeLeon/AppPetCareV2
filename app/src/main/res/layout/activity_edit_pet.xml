<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetsScreens.EditPetActivity"
    android:orientation="vertical"
    android:weightSum="20"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="Edit Pet"
            android:textColor="@color/design_default_color_primary"
            android:gravity="center"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Id: "
            android:textColor="@color/design_default_color_primary"
            android:gravity="center"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/id_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/design_default_color_primary"
            android:gravity="center"
            android:textSize="20dp"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/name_pet_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Name"
            android:gravity="center"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/name_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="Name"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/age_pet_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Age"
            android:gravity="center"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/age_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="Age"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/race_pet_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Breed"
            android:gravity="center"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/race_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="Race"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/weight_pet_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Weight"
            android:gravity="center"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/weight_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="weight"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/additional_pet_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Add"
            android:gravity="center"
            android:textColor="@color/design_default_color_primary"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/additional_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="Additional"
            />
    </LinearLayout>








    <Button
        android:id="@+id/btn_update_pet"
        android:layout_width="180dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Editar"
        />

    <Button
        android:id="@+id/btn_delete_pet"
        android:layout_width="180dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Eliminar"
        />



</LinearLayout>