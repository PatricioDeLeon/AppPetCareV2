<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetsScreens.addPet"
    android:weightSum="10"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Agregar mascota"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/design_default_color_primary"
         />


        <EditText
            android:id="@+id/name_pet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="Name"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/age_pet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="Age"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/race_pet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="Race"
            android:layout_weight="1" />
        <EditText
            android:id="@+id/weight_pet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="weight"
            android:layout_weight="1" />
        <EditText
            android:id="@+id/additonal_pet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="Additional information"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_add_pet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Add pet"
            />




</LinearLayout>