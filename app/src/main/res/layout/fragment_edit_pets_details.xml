<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileScreens.PetsScreens.PetsMenuActivity"
    android:orientation="vertical"
    android:weightSum="20"
    android:background="@color/lpurple"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal"
        android:background="@color/dpurple"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="Edit Pet"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="28dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Id: "
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="28dp"
            />
        <TextView
            android:id="@+id/id_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/design_default_color_primary"
            android:gravity="center"
            android:textSize="20dp"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <TextView
            android:id="@+id/name_pet_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Nombre"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/name_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="Nombre"
            android:layout_marginTop="40dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginBottom="15dp"
        >

        <TextView
            android:id="@+id/age_pet_label"
            android:layout_width="9dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:text="Edad"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <TextView
            android:id="@+id/age_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="Edad"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/race_pet_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Raza"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="22dp"
            />
        <TextView
            android:id="@+id/race_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="Raza"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/weight_pet_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Peso"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="22dp"
            />
        <TextView
            android:id="@+id/weight_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="Peso"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:id="@+id/additional_pet_label"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Agregar"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:textSize="22dp"
            />
        <TextView
            android:id="@+id/additional_pet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:hint="Inf. Adicional"
            />
    </LinearLayout>








    <Button
        android:id="@+id/btn_update_pet"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Editar"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/btn_delete_pet"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Eliminar"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        />



</LinearLayout>

