<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dgreen"
    android:orientation="vertical"
    android:weightSum="10"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/design_default_color_primary"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:weightSum="10"
            android:background="@color/cardview_light_background"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/name_vet_label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="Nombre"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/name_vet_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="Nombre"
                    android:gravity="start"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/email_vet_label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="Email"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/email_vet_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="Email"
                    android:gravity="start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="10"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/phone_vet_label"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="Phone"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/phone_vet_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="Phone"
                    android:gravity="start"/>

            </LinearLayout>

            <TextView
                android:id="@+id/uid_vet"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="ID"
                android:layout_weight="2"
                android:gravity="center"/>



        </LinearLayout>







    </androidx.cardview.widget.CardView>



</LinearLayout>